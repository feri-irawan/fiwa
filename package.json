{
  "name": "fiwa",
  "description": "A lightweight WhatsApp bot with built-in MongoDB integration.",
  "version": "2.0.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "types": {
      "import": "./dist/index.d.ts",
      "require": "./dist/index.d.cts"
    },
    "bun": "./dist/index.js",
    "node": "./dist/index.cjs",
    "import": "./dist/index.js",
    "require": "./dist/index.cjs",
    "default": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "format": "prettier -w src/**/*.ts"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "dependencies": {
    "baileys": "^7.0.0-rc.6",
    "mongodb": "^6.20.0",
    "node-cache": "^5.1.2",
    "tsup": "^8.5.0"
  },
  "devDependencies": {
    "@types/bun": "1.3.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0"
  },
  "peerDependencies": {
    "jimp": "^1.6.0",
    "link-preview-js": "^3.1.0",
    "qrcode-terminal": "^0.12.0",
    "sharp": "^0.34.4",
    "typescript": "^5.9.3"
  },
  "author": "Feri Irawan",
  "homepage": "https://github.com/feri-irawan/fiwa#readme",
  "repository": "https://github.com/feri-irawan/fiwa",
  "bugs": "https://github.com/feri-irawan/fiwa/issues",
  "license": "MIT",
  "keywords": [
    "whatsapp",
    "baileys",
    "mongodb",
    "typescript",
    "automation",
    "messaging",
    "js-whatsapp",
    "whatsapp-api",
    "whatsapp-web",
    "whatsapp-chat",
    "whatsapp-group",
    "multi-device"
  ]
}